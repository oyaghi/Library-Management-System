@model IEnumerable<Library_Management_System.Models.Member>

@{
    ViewData["Title"] = "Index";
}

<h1>Members</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New User</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FullName</td>
                <td>@user.Email</td>
                <td>@user.PhoneNumber</td>
                <td>
                    <a class="btn btn-info btn-sm" asp-action="Edit" asp-route-id="@user.MemberID">Edit</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@user.MemberID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
